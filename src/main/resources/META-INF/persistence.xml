<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="demojpaappdbpersistenceunit">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.demojpaapp.entity.Employee</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/demojpaappdb"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="postgre"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="none"/>

<!--            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL81Dialect"/>-->
<!--            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL95Dialect"/>-->
        </properties>

    </persistence-unit>
</persistence>
