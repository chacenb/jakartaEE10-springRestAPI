<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default">


        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>


        <class>com.example.demo.Employee</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>

            <!-- JPA 3.x -->
            <property name="jakarta.persistence.lock.timeout" value="100"/>
            <property name="jakarta.persistence.query.timeout" value="100"/>


            <!-- JPA 3.x -->
            <property name="jakarta.persistence.validation.group.pre-persist"
                      value="jakarta.validation.groups.MyPersistValidation"/>
            <!--        <property name="jakarta.persistence.validation.group.pre-update" value="jakarta.validation.groups.MyUpdateValidation"/>-->
            <!--        <property name="jakarta.persistence.validation.group.pre-remove" value="jakarta.validation.groups.MyRemovetValidation"/>-->


            <!-- JPA 3.x -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/demojpaappdb"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="postgre"/>

            <property name="jboss.as.jpa.managed" value="false" />

            <property name="jakarta.persistence.schema-generation.database.action" value="create"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>

        </properties>
    </persistence-unit>
</persistence>
